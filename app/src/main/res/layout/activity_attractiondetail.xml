<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="za.co.westcoastexplorers.exploreapp.AttractionDetail"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <android.support.v7.widget.AppCompatTextView
            android:text="Description"
            android:textSize="20sp"
            android:textColor="#212121"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/description"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No description"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/detailsheader"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Details"
            android:textColor="#212121"
            android:textSize="20sp"/>

        <LinearLayout
            android:id="@+id/addresscontainer"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="#212121"
                android:layout_marginRight="16dp"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/address"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/numbercontainer"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number"
                android:textColor="#212121"
                android:layout_marginRight="16dp"/>


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/number"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/websitecontainer"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Website"
                android:textColor="#212121"
                android:layout_marginRight="16dp"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/website"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/colorPrimary"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/facilitycontainer"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facilities"
                android:textColor="#212121"
                android:layout_marginRight="16dp"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/facVoucher"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voucher"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:drawableRight="@drawable/ic_local_atm_black_24dp"
                    android:layout_marginBottom="8dp"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/facCard"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Card"
                    android:gravity="center_vertical"
                    android:drawablePadding="8dp"
                    android:drawableRight="@drawable/ic_payment_black_24dp"
                    android:layout_marginBottom="8dp"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/facBike"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Bicycle Station"
                    android:drawablePadding="8dp"
                    android:drawableRight="@drawable/ic_directions_bike_black_24dp"
                    android:layout_marginBottom="8dp"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/facWifi"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Wi-Fi"
                    android:drawablePadding="8dp"
                    android:drawableRight="@drawable/ic_wifi_black_24dp"
                    android:layout_marginBottom="8dp"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
